% Part title look
\setcounter{part}{0}
\renewcommand{\thepart}{\arabic{part}}
\renewcommand{\thesection}{\thepart.\alph{section}}
\definecolor{partbar}{RGB}{200,200,200}
\renewcommand\part[1]{
  \stepcounter{part}
  \clearpage % has no effect if no material has been placed yet
  \vspace*{-2\baselineskip}
  \noindent\setlength{\fboxsep}{0pt}\fbox{\colorbox{partbar}{\parbox[t][1.1\baselineskip][c]{\dimexpr\textwidth-2\fboxsep}{\centering\normalfont\bfseries Part \thepart\enskip-\enskip #1}}}
